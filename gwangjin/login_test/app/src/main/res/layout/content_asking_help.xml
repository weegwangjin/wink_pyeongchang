<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wgj20.login_test.Asking_help"
    tools:showIn="@layout/activity_asking_help">

    <ImageView
        android:id="@+id/input_Image"
        android:layout_width="121dp"
        android:layout_height="151dp"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <EditText
        android:id="@+id/input_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="10dp"

        />

    <EditText
        android:id="@+id/input_Pphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:text="Parent Phone Number"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="-215dp"/>

    <EditText
        android:id="@+id/input_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Age"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="-215dp" />

    <EditText
        android:id="@+id/input_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="Time"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="-350dp" />

    <EditText
        android:id="@+id/input_Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Notes"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="-350dp" />

    <EditText
        android:id="@+id/input_Note2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Notes"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="-355dp" />

    <Button
        android:id="@+id/Help_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asking help"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="-225dp" />

</android.support.v7.widget.LinearLayoutCompat>